{
  "compilerOptions": {
    "baseUrl": "./src",
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "es2017", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "strictNullChecks": false,
    "paths": {
      "@shared/*": ["shared/*"],
      "@pages/*": ["pages/*"],
      "@styles/*": ["../styles/*"],
      "@store/*": ["shared/store/*"],
      "@assets/*": ["assets/*"],
      "@test-utils/*": ["test-utils/*"],
      "@mocks/*": ["mocks/*"]
    },
    "incremental": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
